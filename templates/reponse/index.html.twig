{% extends 'base.html.twig' %}

{% block title %}Reponse index{% endblock %}

{% block body %}

{{ include('admin/index.html.twig') }}



     <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">table reponse</h6>
              </div>
            </div>
    <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">

    <table class="table align-items-center mb-0">
        <thead>
            <tr>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Id</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Contenu</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td class="align-middle">{{ reponse.id }}</td>
                <td class="align-middle">{{ reponse.contenu }}</td>
                <td class="align-middle">
                    <form method="post" action="{{ path('app_reponse_show', {'id': reponse.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
                    <form method="get" action="{{ path('app_reponse_edit', {'id': reponse.id}) }}">
                <button type="submit" class="btn btn-primary"  >Edit &nbsp; &nbsp; &nbsp;</button>
            </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reponse_new') }}" class="btn btn-success" position="center">Create new</a>
{% endblock %}
